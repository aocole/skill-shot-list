<%= form_for([@location, @machine]) do |f| %>
  <% if @machine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@machine.errors.count, "error") %> prohibited this machine from being saved:</h2>

      <ul>
        <% @machine.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <script type="text/javascript">
    $(function() {
      $( "#combobox" ).combobox();
      $('input.ui-autocomplete-input').focus();
    });
  </script>
  <div class="ui-widget">
<%= f.label :title_id %><br />
<select name="title_id" id="combobox">
      <option value="">Select one...</option>
      <%@titles.each do |title|%>
        <option value="<%=title.id%>"><%=title.name.html_safe%></option>
      <%end%>
    </select>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
